{
  "name": "crypto-price-api",
  "version": "1.0.0",
  "description": "Dynamic Cryptocurrency Price API",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc --build",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "docker:build": "docker build -t crypto-price-api .",
    "docker:run": "docker run -p 3000:3000 crypto-price-api"
  },
  "dependencies": {
    "express": "5.1.0",
    "cors": "2.8.5",
    "helmet": "8.1.0"
  },
  "devDependencies": {
    "@types/express": "5.0.3",
    "@types/node": "24.3.1",
    "@types/cors": "2.8.19",
    "@types/helmet": "0.0.48",
    "typescript": "5.9.2",
    "ts-node-dev": "2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}